generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Landlord {
  id          String     @id 
  email       String     @unique
  name        String?
  phoneNumber String?
  properties  Property[]
  tenants     Tenant[]
  createdAt   DateTime   @default(now())
}

model Property {
  id          String        @id @default(uuid())
  name        String
  address     String
  city        String
  state       String
  landlordId  String
  landlord    Landlord      @relation(fields: [landlordId], references: [id])
  units       Unit[]
  maintenance Maintenance[] // <--- ADDED RELATION
  createdAt   DateTime      @default(now())
}

model Unit {
  id                   String        @id @default(uuid())
  unitNumber           String
  rentAmount           Decimal
  propertyId           String
  property             Property      @relation(fields: [propertyId], references: [id])
  
  tenantName           String?
  tenantEmail          String?
  tenantPhone          String?
  
  paystackCustomerCode String?
  virtualAccountNumber String?
  virtualBankName      String?
  
  payments             Payment[]
  leases               Lease[]
  maintenance          Maintenance[] // <--- ADDED RELATION
  createdAt            DateTime      @default(now())
}

model Payment {
  id          String   @id @default(uuid())
  amount      Decimal
  status      String   
  reference   String   @unique
  paidAt      DateTime @default(now())
  
  unitId      String
  unit        Unit     @relation(fields: [unitId], references: [id])
}

model Tenant {
  id          String     @id @default(uuid())
  name        String
  email       String?
  phoneNumber String?
  nationalId  String?    
  landlordId  String
  landlord    Landlord   @relation(fields: [landlordId], references: [id])
  leases      Lease[]
  createdAt   DateTime   @default(now())
}

model Lease {
  id              String   @id @default(uuid())
  startDate       DateTime
  endDate         DateTime
  monthlyRent     Decimal
  securityDeposit Decimal?
  status          String   
  
  tenantId        String
  tenant          Tenant   @relation(fields: [tenantId], references: [id])
  unitId          String
  unit            Unit     @relation(fields: [unitId], references: [id])
  
  createdAt       DateTime @default(now())
}

model Maintenance {
  id          String   @id @default(uuid())
  title       String
  description String?
  priority    String   // High, Medium, Low
  status      String   // Pending, In Progress, Resolved
  date        DateTime @default(now())

  propertyId  String
  property    Property @relation(fields: [propertyId], references: [id])

  unitId      String?
  unit        Unit?    @relation(fields: [unitId], references: [id])
}